<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CaloriesPerDay">

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="calories per day"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/back_iso" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:background="@drawable/card_bg"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/no_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="1786 Calories/Day"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Little or no exercise"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:layout_marginTop="7dp"
                android:textColor="@android:color/darker_gray" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="23dp"
            android:background="@drawable/card_bg"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/exercise_1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="1786 Calories/Day"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Exercise 1-3 times/week"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:layout_marginTop="7dp"
                android:textColor="@android:color/darker_gray" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="23dp"
            android:background="@drawable/card_bg"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/exercise_3_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="1786 Calories/Day"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Exercise 3-5 times/week"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:layout_marginTop="7dp"
                android:textColor="@android:color/darker_gray" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="23dp"
            android:background="@drawable/card_bg"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/exercise_5_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="1786 Calories/Day"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Exercise 5-7 times/week"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:layout_marginTop="7dp"
                android:textColor="@android:color/darker_gray" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="23dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/card_bg"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/exercise_hard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="1786 Calories/Day"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Very hard exercise &amp; physical job"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:layout_marginTop="7dp"
                android:textColor="@android:color/darker_gray" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>